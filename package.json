{
  "name": "pakeva-backend",
  "version": "1.0.0",
  "description": "packeva services collections",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "docdev": "sudo docker run -it -p 3700:4000 pakeva-backend",
    "serve": "cross-env NODE_ENV=production tsc index.ts -w & pm2 start dist/index.js --watch",
    "prod": "cross-env NODE_ENV=production concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "author": "Devdan",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "randomstring": "^1.2.3",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.4",
    "@types/randomstring": "^1.1.8",
    "@types/response-time": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "bcrypt": "^5.1.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  }
}
